<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dbms_project.DBAHomePageController">
   <children>
      <Label layoutX="22.0" layoutY="22.0" prefHeight="38.0" prefWidth="159.0" text="Hello Admin" textAlignment="RIGHT">
         <font>
            <Font size="26.0" />
         </font>
      </Label>

      <VBox layoutX="26.0" layoutY="86.0" prefHeight="375.0" prefWidth="220.0" spacing="20.0">
         <Button fx:id="createUserButton" mnemonicParsing="false" onAction="#createUserButtonlicked" prefHeight="30.0" prefWidth="180.0" text="Create a new user">
            <VBox.margin>
               <Insets />
            </VBox.margin></Button>
         <Button fx:id="createCourseButton" mnemonicParsing="false" onAction="#createCourseButtonClicked" prefHeight="30.0" prefWidth="180.0" text="Create a new course" />
         <Button fx:id="createDeptButton" mnemonicParsing="false" onAction="#createDeptButtonClicked" prefHeight="30.0" prefWidth="180.0" text="Create a new department" />
         <Button fx:id="updateUserButton" mnemonicParsing="false" onAction="#updateUserButtonClicked" prefHeight="30.0" prefWidth="180.0" text="Update a current user" />
         <Button fx:id="updateCourseButton" mnemonicParsing="false" onAction="#updateCourseButtonClicked" prefHeight="30.0" prefWidth="180.0" text="Update a current course" />
         <Button fx:id="updateSectionButton" mnemonicParsing="false" onAction="#updateSectionButtonClicked" prefHeight="30.0" prefWidth="180.0" text="Update a current section" />
         <Button fx:id="updateDeptButton" layoutX="20.0" layoutY="270.0" mnemonicParsing="false" onAction="#updateDeptButtonClicked" prefHeight="30.0" prefWidth="180.0" text="Update a current department" />
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <Hyperlink fx:id="logoutLink" layoutX="366.0" layoutY="30.0" onAction="#logoutClicked" text="logout" />

   </children>
</AnchorPane>
