<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignUpController">
   <center>
      <AnchorPane prefHeight="375.0" prefWidth="326.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="userFirstName" layoutX="72.0" layoutY="47.0" prefHeight="30.0" prefWidth="150.0" promptText="First Name" style="-fx-border-color: #0559ff; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;" />
            <TextField fx:id="userLastName" layoutX="72.0" layoutY="85.0" promptText="Last Name" style="-fx-border-color: #0559ff; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;" />
            <PasswordField fx:id="userPassword" layoutX="72.0" layoutY="155.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: #0559ff; -fx-border-width: 0px 0px 2px 0px;" />
            <TextField fx:id="userEmail" layoutX="72.0" layoutY="119.0" promptText="Email" style="-fx-border-color: #0559ff; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;" />
             <TextField fx:id="userAge" layoutX="72.0" layoutY="192.0" promptText="Age" style="-fx-border-color: #0559ff; -fx-background-color: transparent; -fx-border-width: 0px 0px 2px 0px;" />
            <Label layoutX="14.0" layoutY="332.0" text="Already have an account?" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label layoutX="133.0" layoutY="23.0" text="Sign up" />
            <Button layoutX="238.0" layoutY="327.0" mnemonicParsing="false" onAction="#LoginClicked" text="Login" />
            <Button layoutX="201.0" layoutY="243.0" mnemonicParsing="false" onAction="#saveInfoClicked" prefHeight="30.0" prefWidth="110.0" text="Save your info" />
            <Button fx:id="guestModeButton" layoutX="14.0" layoutY="285.0" mnemonicParsing="false" onAction="#guestModeButtonClicked" text="GuestMode" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
